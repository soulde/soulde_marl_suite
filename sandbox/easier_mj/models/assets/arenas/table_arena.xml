            <geom pos="0 0 0" size="0.4 0.4 0.4" type="box" conaffinity="0" contype="0" group="1" name="TABLE_visual"
                  material="light-wood"/>
            <site pos="0 0 0.4" name="TABLE_top" size="0.001 0.001 0.001" rgba="0 0 0 0"/>
        </body>

        <light diffuse=".8 .8 .8" dir="0 -.15 -1" directional="false" pos="1 1 4.0" specular="0.3 0.3 0.3"
               castshadow="false"/>
        <light diffuse=".8 .8 .8" dir="0 -.15 -1" directional="false" pos="-3. -3. 4.0" specular="0.3 0.3 0.3"
               castshadow="false"/>

